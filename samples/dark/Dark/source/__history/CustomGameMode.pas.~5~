    procedure OnMouseUp(Button: TMouseButton; Shift: TShiftState; X, Y: Integer); virtual;
    procedure OnMouseMove(Shift: TShiftState; X, Y: Integer); virtual;
    procedure OnMouseWheel(Shift: TShiftState; WheelDelta: Integer; var Handled: Boolean); virtual;
    procedure Process(const dt: Double); virtual;
  end;

implementation

